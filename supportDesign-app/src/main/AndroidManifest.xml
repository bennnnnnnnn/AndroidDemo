<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ben.androiddemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.DrawerNavigationActivity" />
        <activity android:name=".activity.TabLayoutActivity" />
        <activity
            android:name=".activity.CollapsingToolbarLayoutActivity"
            android:theme="@style/AppTheme.Collapsing" />
        <activity android:name=".activity.TextLayoutActivity" />
    </application>

</manifest>